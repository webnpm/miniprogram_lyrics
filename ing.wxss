/* pages/song/ing/ing.wxss */

.skipEnd {
	position: fixed;
	right: 10rpx;
	top: 40%;
	display: inline-block;
	background: #1c75ff;
	color: #ffffff;
	padding: 20rpx;
	border-radius: 50%;
	z-index: 20;
	width: 80rpx;
	text-align: center;
	font-size: 30rpx;
	height: 80rpx;
}
.ing_top {
	position: fixed;
	background: #ffffff;
	width: 100%;
	padding: 0 40rpx;
	box-sizing: border-box;
	height: 180rpx;
	z-index: 10;
}
.ing_001 {
	width: 20rpx;
	margin-right: 10rpx;
}

.ing_top_name {
	font-size: 28rpx;
	color: rgba(51, 51, 51, 1);
	margin-top: 20rpx;
}
.ing_top_per {
	height: 20rpx;
	position: relative;
	background: rgba(255, 163, 15, 0.2);
	border-radius: 10rpx;
	margin: 30rpx 0 20rpx;
	overflow: hidden;
}
.ing_top_per .active {
	background: rgba(255, 163, 15, 1);
	width: 0%;
	height: 100%;
	transition: width 0.5s;
	border-radius: 10rpx;
}

.ing_top_time {
	display: flex;
	justify-content: space-between;
	color: rgba(153, 153, 153, 1);
	font-size: 28rpx;
}

.ing_bot {
	position: fixed;
	bottom: 0;
	background: #ffffff;
	width: 100%;
	box-sizing: border-box;
	height: 250rpx;
	z-index: 10;
}
.ing_bot .refresh {
	position: absolute;
	left: 136rpx;
	top: 50%;
	transform: translateY(-50%);
	color: rgba(102, 102, 102, 1);
	font-size: 28rpx;
	text-align: center;
}
.ing_bot .refresh image {
	width: 46rpx;
}

.ing_bot .channel {
	position: absolute;
	right: 136rpx;
	top: 50%;
	transform: translateY(-50%);
	color: rgba(102, 102, 102, 1);
	font-size: 28rpx;
	text-align: center;
}
.ing_bot .channel image {
	width: 44rpx;
	height: 46rpx;
}
.song_btn {
	position: absolute;
	left: 50%;
	bottom: 0;
	transform: translateX(-50%);
	color: rgba(102, 102, 102, 1);
	font-size: 28rpx;
	text-align: center;
	width: 196rpx;
	height: 218rpx;
	background: url("./assets/song_start.png");
	background-size: 196rpx 218rpx;
	line-height: 144rpx;
	font-size: 40rpx;
	color: rgba(255, 255, 255, 1);
	overflow: hidden;
}
.song_btn.stop {
	background: url("./assets/song_stop.png");
	background-size: 196rpx 218rpx;
}
.song_btn text {
	width: 80rpx;
	display: inline-block;
	line-height: 48rpx;
	margin-top: 13px;
	text-align: center;
}

.lyrc {
	padding: 180rpx 0 250rpx;
	background: #ffffff;
	height: calc(100vh - 430rpx);
	overflow: hidden;
}
.lyrc_li {
	margin: 20rpx 0;
	font-size: 32rpx;
	color: rgba(51, 51, 51, 1);
	text-align: center;
	transition: fontSize 0.5s, color 0.5s;
}
.lyrc_li.active {
	font-size: 40rpx;
	color: rgba(255, 163, 15, 1);
}

.notice_popup {
	width: 606rpx;
	background: #ffffff;
	padding-bottom: 40rpx;
}

.notice_popup .notice_tit {
	color: rgba(51, 51, 51, 1);
	font-size: 32rpx;
	text-align: center;
	padding: 40rpx 0;
}
.notice_popup .notice_descript {
	padding: 0rpx 36rpx 30rpx;
	font-size: 32rpx;
	color: rgba(102, 102, 102, 1);
}
.notice_popup .notice_btn {
	width: 258rpx;
	height: 80rpx;
	background: #1c75ff;
	border-radius: 16rpx;
	text-align: center;
	color: #ffffff;
	font-size: 32rpx;
	margin: 0 auto;
	line-height: 80rpx;
}

.exit_popup {
	width: 606rpx;
	background: #ffffff;
	padding-bottom: 40rpx;
}
.exit_popup .exit_descript {
	color: rgba(51, 51, 51, 1);
	font-size: 32rpx;
	padding: 60rpx 48rpx 0;
	text-align: center;
	font-weight: bold;
}

.exit_popup .exit_btn {
	padding: 80rpx 0rpx 0;
}
.exit_popup .exit_btn view {
	width: 550rpx;
	height: 80rpx;
	margin: 0 auto;
	background: linear-gradient(135deg, #73b059 0%, #47862c 100%);
	border-radius: 44rpx;
	border: 2px solid #ffffff;
	font-size: 32rpx;
	color: #ffffff;
	text-align: center;
	line-height: 80rpx;
	font-weight: 500;
}
.exit_popup .exit_btn view.ok {
	border: 2px solid #47862c;
	background: #ffffff;
	color: #47862c;
	flex: 1;
	margin: 0 20rpx 20rpx;
}

.hot .notice_btn {
	background: #47862c;
}
.hot .ing_top_per {
	background: #e6f0e2;
}
.hot .ing_top_per .active {
	background: #9dce88;
}
.hot .lyrc_li.active {
	color: #47862c;
}

.hot .skipEnd {
	background: #47862c;
}

.hot .song_btn {
	background: url("./assets/song_start_active.png");
	background-size: 196rpx 218rpx;
}
.hot .song_btn.stop {
	background: url("./assets/song_stop_active.png");
	background-size: 196rpx 218rpx;
}
